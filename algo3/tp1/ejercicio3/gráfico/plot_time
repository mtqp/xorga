#!/usr/bin/gnuplot -persist

#exporto como png
set term png

#le pone titulo al grafico
set title "Tiempos del algoritmo bn_mod_n"

#pone la descripccion de los ejes
set xlabel "n"
set ylabel "Tiempo (segundos)"

#pone la leyenda a la izquierda y con borde
set key left box

#defino dos tipos de lineas
#lt=tipo de linea y color,  pt=point type,  ps=point size
#(para ver los distintos point types pongan "test" en el gnuplot)
set style line 1 lt 1 pt 1 ps 1
set style line 2 lt 3 pt 1 ps 1

#dibuja los puntos. index es porque lo separe en bloques de primos/no primos para ponerle distinto estilo..
set output 'png/time_test.png'
plot	'data/time_test.dat' title "Tiempo" linestyle 1,\
	0.000000279*log(x) title "log(n)*c"

set output 'png/time_test_if.png'
plot	'data/time_test_if.dat' title "Tiempo" linestyle 1,\
	0.000000059*log(x) title "log(n)*c"

set output 'png/time_test_no_if.png'
plot	'data/time_test_no_if.dat' title "Tiempo" linestyle 1,\
	0.000000059*log(x) title "log(n)*c"

